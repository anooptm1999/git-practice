#!/bin/bash

set -e

echo "ğŸ”„ Updating package index..."
sudo apt update -y

echo "ğŸ“¦ Installing Java (required for Jenkins)..."
sudo apt install -y openjdk-17-jdk

echo "ğŸ”‘ Adding Jenkins repository key..."
wget -q -O - https://pkg.jenkins.io/debian/jenkins.io.key | sudo tee \
  /usr/share/keyrings/jenkins-keyring.asc > /dev/null

echo "ğŸ“ Adding Jenkins apt repository..."
echo deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc] \
  https://pkg.jenkins.io/debian binary/ | sudo tee \
  /etc/apt/sources.list.d/jenkins.list > /dev/null

echo "ğŸ”„ Updating package index again..."
sudo apt update -y

echo "â¬‡ï¸ Installing Jenkins..."
sudo apt install -y jenkins

echo "â–¶ï¸ Starting Jenkins service..."
sudo systemctl start jenkins
sudo systemctl enable jenkins

echo "âœ… Jenkins installation complete!"
echo "ğŸŒ Access Jenkins at: http://<your-server-ip>:8080"

echo "ğŸ” Initial admin password (save this!):"
sudo cat /var/lib/jenkins/secrets/initialAdminPassword
